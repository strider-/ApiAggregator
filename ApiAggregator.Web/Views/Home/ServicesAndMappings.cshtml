@model NavMenuModel

@{ 
    Layout = null; 
}

<li class="dropdown">
    <a href="#" class="dropdown-toggle" data-toggle="dropdown">Services <b class="caret"></b></a>
    <ul class="dropdown-menu">
        <li>@Html.ActionLink("All", "Index", "Service")</li>
        @if(Model.Services.Any()) 
        {
            <li class="divider"></li>
        }
        @foreach(var s in Model.Services)
        {
            <li>@Html.ActionLink(s.Value, "Edit", "Service", new { id = s.Key }, null)</li>
        }
    </ul>
</li>
<li class="dropdown">
    <a href="#" class="dropdown-toggle" data-toggle="dropdown">Mappings <b class="caret"></b></a>
    <ul class="dropdown-menu">
        <li>@Html.ActionLink("All", "Index", "Mapping")</li>
        @if(Model.Mappings.Any())
        {
            <li class="divider"></li>
        }
        @foreach(var s in Model.Mappings)
        {
            <li>@Html.ActionLink(s.Value, "Edit", "Mapping", new { id = s.Key }, null)</li>
        }
    </ul>   
</li>