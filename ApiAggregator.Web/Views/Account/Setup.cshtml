@model SetupModel

@{
    ViewBag.Title = "Welcome!";
}

<div class="row">
    <div class="page-header">
        <h2>Initial Setup</h2>
    </div>
</div>

<div class="row">
    <p>
        Welcome to the Api Aggregator! Looks like you don't have a username or password set, so lets get those created!
    </p>
</div>

<div class="row">
    @using(Html.BeginForm("Setup", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        <fieldset>
            <div class="form-group">
                @Html.LabelFor(m => m.Username, new { @class = "col-lg-2 control-label" })
                <div class="col-lg-4">
                    @Html.TextBoxFor(m => m.Username, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Username, null, new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Password, new { @class = "col-lg-2 control-label" })
                <div class="col-lg-4">
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Password, null, new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.PasswordConfirm, new { @class = "col-lg-2 control-label" })
                <div class="col-lg-4">
                    @Html.PasswordFor(m => m.PasswordConfirm, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.PasswordConfirm, null, new { @class = "text-danger" })
                </div>
            </div>
            <div class="well well-sm">
                <button type="submit" class="btn btn-primary">
                    <span class="glyphicon glyphicon-user"></span> Save Credentials
                </button>                
            </div>
        </fieldset>
    }
</div>